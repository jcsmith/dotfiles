#Create some aliases to print today's and yesterday's date in "serial number" format.
alias Today="date '+%Y-%m-%d'"
alias Yesterday="date '+%Y-%m-%d' --date=yesterday"

#force bc to use the standard math library.
#This makes bc perform decimial calculations by default.
alias bc="bc -l"

#update my debian/ubuntu systems
alias system-update="sudo apt update; sudo apt full-upgrade && sudo apt autoremove"

#perform a git pull of the /etc/puppet directory on the puppet master.
function puppet-deploy() {
	echo "Issuing a pull on the puppet master...";
	ssh -t $PUPPET_MASTER 'cd /etc/puppet; sudo git pull';
}

#ssh to a host and run the puppet agent.
function puppet-kick() {
	ssh -tt $1 sudo puppet agent --test
}


function mail-term(){
	cd 
	tmux new-session -d -s mail-term 'mutt'
	tmux split-window -d -t mail-term:0 -l 10
	tmux -2 attach-session -t mail-term

}

#support colors with ls on OSX
if [ "$OPERATING_SYSTEM" == "Darwin" ]; then
	alias ls="ls -G"
fi
